    //     // display none
    //     .story-text
    //         margin 0
    //         background-color: white
    .slide-1800s
        height 21600px


.test-div
    height 1px
    display: none

.hidden    
    display none

.no-scroll
    overflow: hidden

.stop-scrolling {
  height: 100%;
  overflow: hidden;
}


.invisible
    opacity: 0