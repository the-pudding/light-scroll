// lightbulb chain max remove from height: 45%
.chain
    background-image: url('/assets/images/chain.png')
    background-position: center center
    background-repeat: repeat-y
    position: absolute;
    right: 20.5%;
    top 34%
    width: 2%;
    height: 900px;
    background-size: 6px;
    z-index: 3
    transform translate(0,-45%)

.chain-background
    z-index 8
    width 100%
    background-color: white
    // height 29%
    position: absolute
//ratio of chain link to container: 0.0202224469
.sleep-schedule
    max-width 40rem
    // height 100%
    margin 0 auto
    margin-left 10%


.intro1
    display: flex
    flex-direction: column
    justify-content: center
    background-color: #353535
    .intro-text
        margin 0 
        font-size: 64px
        font-family: 'Share Tech Mono', monospace;
        width 60%
        margin-left 10%
        color white
        @media (max-width: 550px)
            font-size: 36px

    .scroll-prompt
        position absolute
        bottom 2%
        margin-left 10%
        color white
        font-family $national
         
.lightbulb-container
    top 0
    right 0
    position fixed
    z-index: 10
    width 30%
    .lightbulb-off
    .lightbulb-on        
        position relative
        img
            position absolute
            top 0
            right 0
            width 80%
            z-index: 11

.timer-container
        position absolute
        bottom 10%
        opacity: 0
        @media (max-width: 550px)
            right 1%
    .timer-title
        font-family: $national
        text-transform: uppercase
        font-weight: 600
    .timer
        background-color: black
        font-family: 'Share Tech Mono', monospace;
        color white
        display inline-block

        .time
            display: inline-block
            font-size: 48px
            line-height: 0.5
            margin-left 0.45rem
            margin-right: 0.45rem
            @media (max-width: 550px)
                font-size 28px
                


        .timer-hours
            margin-left 0.45rem
        
        .timer-seconds
            margin-right: 0.45rem
            
    .timer-labels
        display: flex
        justify-content: space-between
        font-family: $national
        text-transform: lowercase
        @media (max-width:550px)
            font-size 12px

    .timer-labels.white-text
    .timer-title.white-text
        color white



